import tkinter as tk
import webbrouser
def my_france():
    webbrouser.open_new(url)
url="https://en.wikipedia.org/wiki/France"
def my_Germany():
    webbrouser.open_new(url)
url="https://www.germany.travel/en/information-on-germany.html"
def my_USA():
    webbrouser.open_new(url)
url="https://www.nationsonline.org/oneworld/united_states.htm"
def my_Andora():
    webbrouser.open_new(url)
url="https://visitandorra.com/en/"
def my_Chine():
    webbrouser.open_new(url)
url="https://www.bbc.com/news/world/asia/china"
def my_Japan():
    webbrouser.open_new(url)
url="https://www.britannica.com/place/Japan"
def my_India():
    webbrouser.open_new(url)
url="https://www.india.gov.in/"
root=tk.Tk()
root title("My project")
root.geometry("550x400+400+20")
root.resizable(0, 0)
root.config(bg="azure3")
main_menu=tk.Menu(root)
root.config(menu=main_menu)
countries1_menu=tk.Menu(main_menu, tearoof=True, fg="Blue")
countries1_menu.add_command(lebel="France", command=my_france)
countries1_menu.add_separator
countries1_menu.add_command(lebel="Germany")
countries1_menu.add_separator
countries1_menu.add_command(lebel="USA", command=my_USA)
countries1_menu.add_separator
countries1_menu.add_command(lebel="Andora")
main_menu.add_cascade(lable="Group Countries 1",menu countries1_menu)
countries2_menu=tk.Menu(main_menu, tearoof=False)
countries2_menu.add_command(lebel="Chine")
countries2_menu.add_separator
countries2_menu.add_command(lebel="Japan", command=my_Japan)
countries2_menu.add_separator
countries2_menu.add_command(lebel="India")
main_menu.add_cascade(lable="Group Countries 1",menu countries2_menu)

root.mainloop()
















