import tkinter as tk
import webbrouser
def my_france():
    webbrouser.open_new(url)
url="https://en.wikipedia.org/wiki/France"
def my_Germany():
    webbrouser.open_new(url)
url="https://www.germany.travel/en/information-on-germany.html"
def my_USA():
    webbrouser.open_new(url)
url="https://www.nationsonline.org/oneworld/united_states.htm"
def my_Andora():
    webbrouser.open_new(url)
url="https://visitandorra.com/en/"
def my_Chine():
    webbrouser.open_new(url)
url="https://www.bbc.com/news/world/asia/china"
def my_Japan():
    webbrouser.open_new(url)
url="https://www.britannica.com/place/Japan"
def my_India():
    webbrouser.open_new(url)
url="https://www.india.gov.in/"
root=tk.Tk()
root.title("My project")
root.geometry("550x400+400+20")
root.resizable(0, 0)
root.config(bg="azure3")
main_menu=tk.Menu(root)
root.config(menu=main_menu)
countries1_menu=tk.Menu(main_menu, tearoof=True, fg="Blue")
countries1_menu.add_command(lebel="France", command=my_France)
countries1_menu.add_separator
countries1_menu.add_command(lebel="Germany", command=my_Germany)
countries1_menu.add_separator
countries1_menu.add_command(lebel="USA", command=my_USA)
countries1_menu.add_separator
countries1_menu.add_command(lebel="Andora", command=my_Andora)
main_menu.add_cascade(lable="Group Countries 1",menu countries1_menu)
countries2_menu=tk.Menu(main_menu, tearoof=False)
countries2_menu.add_command(lebel="Chine", command=my_Chine)
countries2_menu.add_separator
countries2_menu.add_command(lebel="Japan", command=my_Japan)
countries2_menu.add_separator
countries2_menu.add_command(lebel="India", command=my_India)
main_menu.add_cascade(lable="Group Countries 1",menu countries2_menu)

root.mainloop()

import tkinter as tk
window=tk.Tk()
window.geometry("400x300")
window.config(bg="cornsilk3")
var_str=tk.StringVar()
var_str.set(List Companies")
var_str.set("Boing")
om=tk.OptionMenu(window, var_str, "Dell", "BMW", "Google", "Acer", "Lenovo", "Boing", "Subary")
om.pack(pady=42)
window.mainloop()

import tkinter as tk
def display_select(choice)
  choice=var.get()
  print(choice)
wind=tk.Tk()
wind.title("My Option Menus")
wind.geometry("480x420")
wind.resizable(0, 0)
wind.config(bg="ivor3")
my_cars=["Toyota", "Suzuki", "Subaru", "Citroen", Ferrari", "Reno", "Mers", "BMW"]
var=tk.StringVar()
var.set(my_cars[7])
om=tk.OptionMenu(wind, var,*my_cars, command=display_select)
om.pack(expand=True)
wind.mainloop()

import tkinter as tk
root=tk.Tk()
root.config(bg="orange")
my_var=tk.StringVar()
om1=tk.OptionMenu(root, my_var, "Apple", "Orange", "Lemon", "Grape", "Ananas")
but=tk.Button(root, text="click me", font="Calibri 11", bg="LightGreen"
but.place(x=20, y=50)
om1.place(x=100, y=50)
root.mainloop()




























































































